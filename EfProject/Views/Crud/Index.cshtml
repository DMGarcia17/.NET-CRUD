@using EfProject.Resources
@model IEnumerable<EfProject.Models.Cliente>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fechaAlta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.edad)
        </th>
        <th></th>
    </tr>

@if (Model != null)
{
    foreach (var item in Model) {
         <tr>
             <td>
                 @Html.DisplayFor(modelItem => item.nombre)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.fechaAlta)
             </td>
             <td>
                 @Html.DisplayFor(modelItem => item.edad)
             </td>
             <td>
                 @Html.ActionLink(@Strings.EditTitle, "Edit", new { id=item.ID }) |
                 @Html.ActionLink(@Strings.DeleteTitle, "Delete", new { id=item.ID })
             </td>
         </tr>
     }

}
</table>
